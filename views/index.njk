{% extends layout %}
{% block content %} 
  <div class="container">
    <div class="cards d-flex flex-wrap justify-content-center">
      <ul class="card list-group list-group-horizontal mb-4" style="width: 42rem;">
        <li class="list-group-item d-flex align-items-center"><p style="margin-bottom: 0;">Sort by:</p></li>
        <li class="list-group-item">
          <form action="/" ref='newest' id='newest'  method="post">
            <input type="hidden" id="sort" name="sort" value="newest">
            <input type="submit" class="btn btn-outline-primary" value="Newest" />
          </form>
        </li>
        <li class="list-group-item">
          <form action="/" ref='oldest' id='oldest'  method="post">
            <input type="hidden" id="sort" name="sort" value="oldest">
            <input type="submit" class="btn btn-outline-primary" value="Oldest" />
          </form>
        </li>
        <li class="list-group-item">
          <form action="/" ref='alphabetically' id='alphabetically'  method="post">
            <input type="hidden" id="sort" name="sort" value="alphabetically">
            <input type="submit" class="btn btn-outline-primary" value="Alphabetically" />
          </form>
        </li>
        <li class="list-group-item">
          <form action="/" ref='random' id='random'  method="post">
            <input type="hidden" id="sort" name="sort" value="random">
            <input type="submit" class="btn btn-outline-primary" value="Random" />
          </form>
        </li>
      </ul>
      {% for video in videos %}
        <div class="card mb-4" style="width: 42rem;">
          <div class="card-body">
            <h5 class="card-title mb-3">{{video.title}}</h5>
            <h6 class="card-subtitle mb-3 text-muted">{{video.updated_at}}</h6>
            <div class="card-text ratio ratio-16x9 mb-3">
              <video controls preload="none" poster="/thumbnail/{{ video.path | replace('.mp4', '') }}-thumbnail-320x240-0001.png">
                <source src="/videos/{{video.path}}" type="video/mp4">
                Your browser does not support the video tag.
              </video>
            </div>
            <p class="card-text">{{video.description}}</p>
            <div class="d-flex">
              <form action="{{video.id}}/edit" method="GET">
                <input type="submit" value="Edit" class="btn btn-primary mr-auto">
              </form>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>

{% endblock %}