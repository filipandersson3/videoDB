{% extends layout %}
{% block content %} 
  <div class="row justify-content-center">
    <div class="col col-sm-8 col-lg-5 col-xxl-4">
      {% for video in videos %}
        <div class="card mb-4 w-100">
          <div class="card-body">
            <form rel='uploadForm' 
            id='uploadForm' 
            method='post' 
            encType="multipart/form-data">
            <label for="title">Title</label>
            <input type="text" class="form-control mb-3" 
                id="title" name="title" value="{{video.title}}"
                placeholder="Change the title..." autocomplete="off">
            <div class="card-text ratio ratio-16x9 mb-3">
              <video controls>
                <source src="/videos/{{video.path}}" type="video/mp4">
                Your browser does not support the video tag.
              </video>
            </div>
            <label for="description">Description</label>
            <textarea rows="5" class="form-control mb-3" 
                id="description" name="description" 
                placeholder="Change the description..." 
                autocomplete="off">{{video.description}}</textarea>
            <input type='submit' value='Done!' 
              class="btn btn-primary mr-auto mb-2"/>
            </form>
            <form action="/{{video.id}}/delete/" method="GET">
              <input type="submit" value="DELETE" class="btn btn-danger">
            </form>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>

{% endblock %}